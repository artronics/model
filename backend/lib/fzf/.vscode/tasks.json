{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run fzf tests",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig test -femit-bin=${workspaceFolder}/zig-out/lib/search-test ${workspaceFolder}/src/fzf.zig",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "run pattern tests",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig test -femit-bin=${workspaceFolder}/zig-out/lib/pattern-test ${workspaceFolder}/src/pattern.zig",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "run benchmark",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig build benchmark",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "run benchmark tests",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig test -femit-bin=${workspaceFolder}/zig-out/lib/benchmark-test ${workspaceFolder}/src/benchmark.zig",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        }
    ]
}